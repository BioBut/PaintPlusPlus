<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="match_parent">
	
	<TextView
		android:text="@string/curves_channel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/text_curves_channel"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginStart="24dp"
		app:layout_constraintLeft_toLeftOf="parent" />
	
	<Spinner
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/spinner_curves_channel"
		android:layout_marginTop="4dp"
		app:layout_constraintTop_toBottomOf="@+id/text_curves_channel"
		android:layout_marginStart="16dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginEnd="16dp"
		app:layout_constraintRight_toRightOf="parent" />
	
	<pl.karol202.paintplus.color.ColorCurvesView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/color_curves_view"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/spinner_curves_channel"
		android:layout_marginStart="16dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginEnd="8dp"
		app:layout_constraintRight_toRightOf="parent" />
	
	<Button
		android:text="@string/preview"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/button_curves_preview"
		android:layout_marginStart="16dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginEnd="16dp"
		app:layout_constraintRight_toRightOf="parent"
		style="?attr/borderlessButtonStyle"
		android:textColor="@color/color_accent"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/color_curves_view" />

</android.support.constraint.ConstraintLayout>