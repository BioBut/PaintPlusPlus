<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:background="@color/shape_properties">
	
	<CheckBox
		android:text="@string/circle_fill"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/check_circle_fill"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginStart="12dp"
		app:layout_constraintLeft_toLeftOf="parent" />
	
	<TextView
		android:text="@string/circle_width"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/text_circle_width"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/check_circle_fill"
		android:layout_marginStart="16dp"
		app:layout_constraintLeft_toLeftOf="parent" />
	
	<SeekBar
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/seekBar_circle_width"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/check_circle_fill"
		app:layout_constraintLeft_toRightOf="@+id/text_circle_width"
		android:layout_marginEnd="32dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginBottom="16dp"
		android:max="49" />
	
	<TextView
		android:text="50"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/circle_width"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/check_circle_fill"
		app:layout_constraintLeft_toRightOf="@+id/seekBar_circle_width" />
</android.support.constraint.ConstraintLayout>