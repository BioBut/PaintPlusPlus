<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent" android:layout_height="match_parent">
	
	<TextView
		android:text="@string/selection_shape"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/text_selection_shape"
		android:layout_marginStart="16dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginLeft="16dp" />
	
	<Spinner
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/spinner_selection_shape"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/text_selection_shape"
		android:layout_marginStart="4dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginEnd="16dp"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="16dp" />
	
	<TextView
		android:text="@string/selection_mode"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/text_selection_mode"
		android:layout_marginStart="16dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/spinner_selection_shape"
		android:layout_marginLeft="16dp" />
	
	<Spinner
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/spinner_selection_mode"
		android:layout_marginEnd="16dp"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/text_selection_mode"
		android:layout_marginStart="4dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="16dp"
		android:layout_marginLeft="4dp" />

</android.support.constraint.ConstraintLayout>