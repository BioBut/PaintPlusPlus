<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginLeft="16dp"
	android:layout_marginRight="16dp">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/size_tool"
		android:id="@+id/text_brush_size"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignBottom="@+id/seekBar_brush_size"
		android:paddingBottom="4dp" />

	<SeekBar
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/seekBar_brush_size"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/text_brush_size"
		android:layout_toEndOf="@+id/text_brush_size"
		android:layout_toLeftOf="@+id/brush_size"
		android:max="99"
		android:paddingBottom="4dp" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/brush_size"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_alignBottom="@+id/seekBar_brush_size"
		android:paddingBottom="4dp" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/brush_shape"
		android:id="@+id/text_brush_shape"
		android:layout_below="@+id/text_brush_size"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_marginTop="8dp" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/brush_shape_offset"
		android:id="@+id/text_brush_shape_offset"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignBottom="@+id/seek_brush_shape_offset" />

	<SeekBar
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/seek_brush_shape_offset"
		android:layout_toEndOf="@id/text_brush_shape_offset"
		android:layout_below="@+id/text_brush_shape"
		android:layout_marginTop="4dp"
		android:max="100"
		android:layout_toLeftOf="@+id/brush_shape_offset" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/brush_shape_offset"
		android:layout_alignParentEnd="true"
		android:layout_alignBottom="@+id/seek_brush_shape_offset" />

</RelativeLayout>